import * as React from "react";
import { trpc } from '../../utility/trpc';

const Samples: React.FC<{ textAreaText: HTMLTextAreaElement | null,
	applyConversion: Function}> = ({ textAreaText, applyConversion }): React.ReactElement => {
	const samples = trpc.useQuery(['getSampleGraphs'], {onSuccess: (data) => {
	console.log(JSON.stringify(data);
	}})

	// import from file
	// maybe go through each file and load it 
	// files can be written in regular syntax

	return (
		<ul className="graph-creator__samples">
			{
				// query has to be finished and textAreaText has to 
				// be loaded then load all the list elements
				samples.data &&
				textAreaText &&
				samples.data.map((value, index) =>
					<li key={index}
						onClick={() => { textAreaText.value = value; applyConversion() }}
						>{index}</li>)
			}

		</ul>
	);
}

export default Samples;
